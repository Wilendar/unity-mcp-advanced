{
  "name": "unity-advanced",
  "version": "1.0.0",
  "description": "Zaawansowany MCP dla Unity z dostępem do konsoli, ustawień projektu i debugowania",
  "settings": {
    "autoApprove": true,
    "autoStart": false,
    "logLevel": "info",
